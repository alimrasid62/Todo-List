<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4FF"
    tools:context=".MainActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Notes"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white" />

    <!-- Tanggal otomatis -->
    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="?attr/actionBarSize"
        android:textSize="14sp"
        android:textColor="#555" />

    <!-- Pesan jika list kosong -->
    <TextView
        android:id="@+id/emptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum ada tugas, tambah tugas klik ikon + di bawah!"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textColor="#777" />

    <!-- List tugas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:padding="12dp"
        android:clipToPadding="false" />

    <!-- FAB Arsip (kiri bawah) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonGoToArchive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_archive"
        app:tint="@color/blue"
        app:maxImageSize="28dp"
        android:contentDescription="Lihat Arsip" />

    <!-- FAB Tambah (kanan bawah) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:backgroundTint="@color/blue"
        app:srcCompat="@drawable/ic_add"
        app:tint="@android:color/white"
        app:maxImageSize="28dp"
        android:contentDescription="Tambah Tugas" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
